<GridPane alignment="center" hgap="10" prefHeight="197.0" prefWidth="400.0" vgap="10" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.passwordmanager.gui.controllers.LoginController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane fx:id="login" minHeight="-Infinity" minWidth="-Infinity" prefHeight="220.0" prefWidth="409.0" style="-fx-background-color: #DCDCDC;">
         <children>
            <Button fx:id="okBtn" layoutX="254.0" layoutY="190.0" minHeight="17.0" mnemonicParsing="false" onAction="#openMainWindow" prefHeight="20.0" prefWidth="65.0" text="Ok">
               <font>
                  <Font size="11.0" />
               </font>
            </Button>
            <Button fx:id="cancelBtn" layoutX="328.0" layoutY="190.0" minHeight="17.0" mnemonicParsing="false" onAction="#closeApp" prefHeight="20.0" prefWidth="65.0" text="Cancel">
               <font>
                  <Font size="11.0" />
               </font>
            </Button>
            <Button fx:id="helpBtn" layoutX="8.0" layoutY="190.0" minHeight="19.0" mnemonicParsing="false" onAction="#showHelp" prefHeight="20.0" prefWidth="65.0" text="Help ">
               <font>
                  <Font size="11.0" />
               </font>
            </Button>
            <CheckBox fx:id="showCheckBox" layoutX="288.0" layoutY="116.0" mnemonicParsing="false" onAction="#toggleVisiblePassword" stylesheets="@LoginStyle.CSS" text="Show Password">
               <font>
                  <Font size="10.0" />
               </font></CheckBox>
            <TextField fx:id="passShowFld" layoutX="117.0" layoutY="110.0" />
            <PasswordField fx:id="passHiddenFld" layoutX="117.0" layoutY="110.0" />
            <Separator layoutY="176.0" prefHeight="0.0" prefWidth="409.0" style="-fx-background-color: GRAY;">
               <effect>
                  <Blend mode="DARKEN" />
               </effect></Separator>
         </children></AnchorPane>
   </children>
</GridPane>
